nnoremap L gt
nnoremap H gT
nnoremap x d
nnoremap X D
nnoremap ; :
nnoremap U :undo<Space>
inoremap <C-v> <S-Insert>
cnoremap <C-v> <S-Insert>
nnoremap ! :set<Space>invum<Return>

" IME-OFF
style! -name=commandline-ime chrome://* #liberator-commandline-command input {ime-mode: inactive;}

set novisualbell
set titlestring=Vimperator
set focuscontent
set complete=sl
set gui=none,navigation,tabs
set hintchars=asdfglkjh
set defsearch=google
set runtimepath="$HOME/vimperator"

loadplugins

command! -nargs=+ lazy autocmd VimperatorEnter .* <args>
:lazy fmaps -u='mail\.google\.com/mail' c / j k n p o u e x s r a # [ ] ? gi gs gt gd ga gc
:lazy fmaps -u='mail\.google\.com/mail/.*/[0-9a-f]+$' c / j,n k,p n,j p,k o u e x s r a # [ ] ? gi gs gt gd ga gc
:lazy fmaps -u='feedly\.com/i'    j k s n p o v 
:lazy fmaps -u='todoist\.com/app' j k s n p o v

set nextpattern=\bnext\b,\bmore\b,^next$,^次(の)?ページ,\b次.*,^次へ$,→\b,^>$,^(>>|≫)$,^(>|≫),(>|≫)$
set previouspattern=\bprev|previous\b,^prev$,^前(の)?ページ,\b前.*,^前へ$,\b←,^<$,^(<<|≪)$,^(<|≪),(<|≪)$

" ==Simple_Color_Scheme==
highlight Bell display: none;
highlight CmdLine font-size: 12px; font-weight: normal; font-family: monospace; padding: 2px 3px;
highlight ErrorMsg background-color: #E00; color: #F5F5F5;
highlight Filter font-weight: bold; color: #000;
highlight -a StatusLine       font-size: 12px; font-weight: normal; color: #222; background-color: inherit;
highlight Hint font-family: monospace; font-size: 12px; font-weight: normal; color: white; background-color: navy; padding: 2px 2px; border: 1px solid #FFF;
highlight HintElem background-color: aliceblue;
highlight HintActive background-color: lightgreen;
highlight Title font-size: 12px; letter-spacing: 2px; color: #333; background: #CCC;
