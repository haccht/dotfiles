SSH_AGENT_FILE="$HOME/.ssh/ssh_agent"
[ -f $SSH_AGENT_FILE ] && source $SSH_AGENT_FILE >& /dev/null

if ! ssh-add -l >& /dev/null ; then
  echo "Add ssh key to the ssh-agent"
  echo ""

  /usr/bin/ssh-agent -s > $SSH_AGENT_FILE
  source $SSH_AGENT_FILE &> /dev/null

  /usr/bin/ssh-add ~/.ssh/testbed.key
fi

# Add below line to ~/.bash_logout
#/usr/bin/ssh-agent -k
