" Settings
set nosmoothscroll
set noautofocus
set typelinkhints
let searchlimit = 10
let scrollstep = 70
let barposition = "bottom"
let locale = "jp"
let mapleader = ","
" alias ':g' to ':tabnew google'
command g tabnew google
let completionengines = ["google", "amazon", "twitter"]
" blacklists prefixed by '@' act as a whitelist
let blacklists = ["https://mail.google.com/*","*://mail.google.com/*","@https://mail.google.com/mail/*","https://feedly.com/*","http://casper-1.ssc-otemachi.ocn.ad.jp/*"]
" Mappings
map <Leader>r reloadTabUncached
map <Leader>x :restore<Space>
map H previousTab
map L nextTab
map u lastClosedTab
map <BS> goBack
map <C-u> scrollPageUp
map <C-d> scrollPageDown
unmap a
unmap e
unmap d
unmap s
unmap w
unmap K
unmap J
" let configpath = '/path/to/your/.cvimrc'
